@page
@model MyAspNetApp.Pages.ProductsCreateModel
@{
    Layout = null;
}

<h2>新增商品</h2>

<form method="post">
    <div class="mb-3">
        <label>商品名稱</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>價格</label>
        <input asp-for="Product.Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
</form>
