@page
@model MyAspNetApp.Pages.ProductsEditModel
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>編輯商品</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label asp-for="Product.Name">名稱</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Product.Price">價格</label>
        <input asp-for="Product.Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Product.CategoryId">分類</label>
        <select asp-for="Product.CategoryId" class="form-select" asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))">
            <option value="">-- 請選擇分類 --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">儲存</button>
</form>
