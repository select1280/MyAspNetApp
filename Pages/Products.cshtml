@page
@using Microsoft.AspNetCore.Http
@model MyAspNetApp.Pages.ProductsModel
@{

}

<h2>商品清單</h2>

<a href="/ProductsCreate">新增商品</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>編號</th>
            <th>圖片</th>
            <th>名稱</th>
            <th>價格</th>
            <th>分類</th> @* ← 新增 *@
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.ProductList)
        {
            <tr>
                <td>@p.Id</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImageName))
                    {
                        <img src="~/images/@p.ImageName" style="height: 50px;" />
                    }
                </td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Category?.Name</td> @* ← 顯示分類名稱 *@
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="/ProductsEdit" asp-route-id="@p.Id">編輯</a>
                    <a class="btn btn-sm btn-danger ms-2" href="/ProductsDelete?id=@p.Id">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
